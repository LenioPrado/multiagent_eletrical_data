package simulator.cases;

import enums.EquipmentState;
import equipment.Equipment;
import equipment.appliances.Refrigerator;
import equipment.energysources.Battery;
import equipment.rates.Rates;
import simulator.BaseSimulationCase;
import time.FixedTimeOfUse;

public class RefrigeratorSimulation extends BaseSimulationCase {

	public RefrigeratorSimulation(Rates rates) throws Exception {
		super(rates);
	}
	
	@Override
	public String getSimulationDescription() {
		return "RefrigeratorSimulation";
	}

	@Override
	public void setSimulationValues() throws Exception {
		new Refrigerator(EquipmentState.ON, 127, 0.9, 0.8, 1.7, getRates());		
	}

	@Override
	public void resetSimulationValues() throws Exception {
		new Refrigerator(EquipmentState.OFF, 127, 0.9, 0.8, 1.7, getRates());
	}
	
	@Override
	protected Equipment getEquipment(EquipmentState state) throws Exception {
		return 
	}
}